{
    "compilerOptions": {
        "module": "commonjs",
        "jsx": "react-jsxdev",
        "watch": true,
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}